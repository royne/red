      <%= link_to "Hace " + time_ago_in_words(status.created_at), status %>
      <span class="admin">
        | <%= link_to "Editar", edit_status_path(status) %> |
        <%= link_to "Eliminar", status, method: :delete, data: {confirm: "Â¿estas seguro que quieres eliminar esto?"} %>
      </span>
    </div>
  </div>

